<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.registrorfu.ResumenDatoIngresadoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="@dimen/spacing_mlarge"
                    android:layout_height="@dimen/spacing_mlarge"
                    android:layout_marginStart="@dimen/content_inset_51"
                    android:layout_marginTop="@dimen/text_margin"
                    android:background="@drawable/shape_stepper_enabled"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/normalTextSize" />
                </RelativeLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="@dimen/width_line"
                    android:layout_height="4dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/content_inset_small"
                    android:layout_marginEnd="0dp"
                    android:background="@color/line_stepper"
                    android:layout_gravity="center"/>


                <RelativeLayout
                    android:layout_width="@dimen/spacing_mlarge"
                    android:layout_height="@dimen/spacing_mlarge"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/text_margin"
                    android:background="@drawable/shape_stepper_enabled"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/normalTextSize"/>

                </RelativeLayout>
                <View

                    android:layout_width="@dimen/width_line"
                    android:layout_height="4dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/content_inset_small"
                    android:layout_marginEnd="0dp"
                    android:background="@color/line_stepper"
                    android:layout_gravity="center"/>

                <RelativeLayout
                    android:layout_width="@dimen/spacing_mlarge"
                    android:layout_height="@dimen/spacing_mlarge"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/text_margin"
                    android:background="@drawable/shape_stepper_enabled"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/normalTextSize"/>
                </RelativeLayout>

                <View
                    android:layout_width="@dimen/width_line"
                    android:layout_height="4dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/content_inset_small"
                    android:layout_marginEnd="0dp"
                    android:background="@color/line_stepper"
                    android:layout_gravity="center" />

                <RelativeLayout

                    android:layout_width="@dimen/spacing_mlarge"
                    android:layout_height="@dimen/spacing_mlarge"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/text_margin"
                    android:background="@drawable/shape_stepper_selected"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/normalTextSize"/>

                </RelativeLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Resumen de Datos Ingresados"
                    android:gravity="center"
                    style="@style/textview_subtitulos_black_bold_large" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Tipo de Diligencia"
                        style="@style/textview_subtitulos_black_bold_large" />

                    <TextView
                        android:id="@+id/tip_diligencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Diligencia de Reconocimiento Físico Único"
                        style="@style/textview_textos_gray_large"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Fecha de Reconocimiento Físico Único"
                        style="@style/textview_subtitulos_black_bold_large" />

                    <TextView
                        android:id="@+id/fech_reconocimiento_unico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="18/08/2021 15:23"
                        style="@style/textview_textos_gray_large"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Cantidad de Bultos"
                        style="@style/textview_subtitulos_black_bold_large" />

                    <TextView
                        android:id="@+id/cant_bultos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="10"
                        style="@style/textview_textos_gray_large"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Boletín Quimico"
                        style="@style/textview_subtitulos_black_bold_large" />

                    <TextView
                        android:id="@+id/botin_quimico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="SI"
                        style="@style/textview_textos_gray_large"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Boletín Quimico"
                        style="@style/textview_subtitulos_black_bold_large" />

                    <TextView
                        android:id="@+id/Descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Se reconcieron 10 bultos no encontrandose incidencia significativas en el despacho"
                        style="@style/textview_textos_gray_large"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <Button
                android:id="@+id/btn_dato_ingresado_regresar"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:background="#8C8C8C"
                android:layout_marginRight="10dp"
                android:text="Regresar"/>

            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="#02A7F0"
                android:textColor="@color/colorWhite"
                android:text="Grabar"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>