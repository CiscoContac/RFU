<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pe.gob.sunat.base.android.ui.seguimiento.SeguimientoDetalleActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_detail_tracking_title"
                        android:text="Seguimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/margin_min"
                        android:layout_marginStart="@dimen/margin_max"
                        android:layout_marginEnd="@dimen/margin_max"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:id="@+id/textView_detail_tracking_remitente"
                        android:text="Remitente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_detail_tracking_title"
                        android:layout_margin="@dimen/default_margin"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        />


                    <TextView
                        android:id="@+id/textView_detail_tracking_remitente_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_max"
                        android:layout_marginTop="@dimen/margin_min"
                        android:layout_marginEnd="36dp"
                        android:text="[Remitente]"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_detail_tracking_remitente" />

                    <TextView
                        android:id="@+id/textView_detail_tracking_destinatario"
                        android:text="Destinatario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_detail_tracking_remitente_descripcion"
                        android:layout_margin="@dimen/default_margin"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        />


                    <TextView
                        android:id="@+id/textView_detail_tracking_destinatario_descripcion"
                        android:text="[Destinatario]"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_detail_tracking_destinatario"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp"
                        android:layout_marginTop="@dimen/margin_min"
                        android:layout_marginStart="@dimen/margin_max"
                        android:layout_marginEnd="36dp"
                        />

                    <TextView
                        android:id="@+id/textView_detail_tracking_fec_recepcion"
                        android:text="Fecha de Recepción"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_detail_tracking_destinatario_descripcion"
                        android:layout_margin="@dimen/default_margin"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        />


                    <TextView
                        android:id="@+id/textView_detail_tracking_fec_recepcion_descripcion"
                        android:text="[Fecha Recepción]"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_detail_tracking_fec_recepcion"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp"
                        android:layout_marginTop="@dimen/margin_min"
                        android:layout_marginStart="@dimen/margin_max"
                        android:layout_marginEnd="36dp"
                        />
                    <TextView
                        android:id="@+id/textView_detail_tracking_accion"
                        android:text="Acción"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_detail_tracking_fec_recepcion_descripcion"
                        android:layout_margin="@dimen/default_margin"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        />

                    <TextView
                        android:id="@+id/textView_detail_tracking_accion_descripcion"
                        android:text="[Acción]"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_detail_tracking_accion"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp"
                        android:layout_marginTop="@dimen/margin_min"
                        android:layout_marginStart="@dimen/margin_max"
                        android:layout_marginEnd="36dp"
                        />


                    <TextView
                        android:id="@+id/textView_detail_tracking_observacion"
                        android:text="Observación"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_detail_tracking_accion_descripcion"
                        android:layout_margin="@dimen/default_margin"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        />


                    <TextView
                        android:id="@+id/textView_detail_tracking_observacion_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_max"
                        android:layout_marginEnd="36dp"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:layout_marginTop="@dimen/margin_min"
                        android:text="[Observación]"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_detail_tracking_observacion" />

                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.cardview.widget.CardView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>



    </ScrollView>
</LinearLayout>