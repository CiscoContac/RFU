<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_filter_labor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundcolor">

        <RelativeLayout
            android:id="@+id/view_autorization_exceptional_work"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/imageView_see_detail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar_clock"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin"
                />

            <TextView
                android:id="@+id/textView_exceptional_work_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_min"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_toEndOf="@+id/imageView_see_detail"
                android:text="[Fecha Autorizacion]"
                android:textAlignment="center"
                android:textSize="11sp"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/textView_exceptional_work_hora_inicio"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_min"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_toEndOf="@+id/textView_exceptional_work_fecha"
                android:text="[Hora Ini]"
                android:textAlignment="center"
                android:textSize="11sp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/textView_exceptional_work_hora_fin"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin"
                android:text="[Hora Fin]"
                android:textAlignment="center"
                android:textSize="11sp"
                android:layout_toEndOf="@+id/textView_exceptional_work_hora_inicio"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/textView_exceptional_work_sustento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginEnd="@dimen/margin_min"
                android:layout_marginBottom="@dimen/default_margin"
                android:layout_toEndOf="@+id/textView_exceptional_work_hora_fin"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="[Sustento]"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/colorPrimary"
                />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>