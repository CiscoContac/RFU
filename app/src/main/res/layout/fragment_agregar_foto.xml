<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.registrorfu.AgregarFotoFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <RelativeLayout

                    android:layout_width="@dimen/spacing_mlarge"
                    android:layout_height="@dimen/spacing_mlarge"
                    android:layout_marginStart="@dimen/content_inset_51"
                    android:layout_marginTop="@dimen/text_margin"
                    android:background="@drawable/shape_stepper_enabled"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/normalTextSize" />
                </RelativeLayout>
                <View
                    android:id="@+id/view2"
                    android:layout_width="@dimen/width_line"
                    android:layout_height="4dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/content_inset_small"
                    android:layout_marginEnd="0dp"
                    android:background="@color/line_stepper"
                    android:layout_gravity="center"
                    />


                <RelativeLayout

                    android:layout_width="@dimen/spacing_mlarge"
                    android:layout_height="@dimen/spacing_mlarge"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/text_margin"
                    android:background="@drawable/shape_stepper_enabled"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/normalTextSize" />

                </RelativeLayout>
                <View

                    android:layout_width="@dimen/width_line"
                    android:layout_height="4dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/content_inset_small"
                    android:layout_marginEnd="0dp"
                    android:background="@color/line_stepper"
                    android:layout_gravity="center"
                    />

                <RelativeLayout

                    android:layout_width="@dimen/spacing_mlarge"
                    android:layout_height="@dimen/spacing_mlarge"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/text_margin"
                    android:background="@drawable/shape_stepper_selected"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="3"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/normalTextSize" />

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/width_line"
                    android:layout_height="4dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/content_inset_small"
                    android:layout_marginEnd="0dp"
                    android:background="@color/line_stepper_disabled"
                    android:layout_gravity="center"
                    />

                <RelativeLayout

                    android:layout_width="@dimen/spacing_mlarge"
                    android:layout_height="@dimen/spacing_mlarge"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/text_margin"
                    android:background="@drawable/shape_stepper_disabled"
                    android:layout_marginEnd="@dimen/content_inset_52"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="4"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/normalTextSize" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"

                        android:padding="5dp">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="FOTOS DE LA DILIGENCIA"
                            android:textAlignment="center"
                            style="@style/textview_textos_black_large"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_diligencia_foto"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:scrollbars="none"
                        android:scrollingCache="true"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:context=".ui.registrorfu.AgregarFotoFragment" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_nueva_camara"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="40dp"
                        android:backgroundTint="@color/bg_row_background"
                        android:src="@drawable/ic_camera"
                        android:tint="@color/colorWhite" />

                </LinearLayout>




            </androidx.cardview.widget.CardView>







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_foto_lista_regresar"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorDescription"
                    android:text="Regresar"
                    android:textColor="@color/colorWhite" />



            </LinearLayout>


        </LinearLayout>



    </LinearLayout>



</RelativeLayout>