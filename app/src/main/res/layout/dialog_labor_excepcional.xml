<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView_labor_autorizacion_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de AutorizaciÃ³n:"
        android:textColor="@color/colorBlack"
        android:fontFamily="sans-serif-medium"
        />
    <TextView
        android:id="@+id/textView_labor_autorizacion_fecha_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_fecha_inicio_descripcion"
        android:textColor="@color/colorPrimary"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="@dimen/margin_min"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/default_margin"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingEnd="@dimen/margin_max"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView_labor_autorizacion_hora_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora de Inicio"
                android:textColor="@color/colorBlack"
                android:fontFamily="sans-serif-medium"
                />
            <TextView
                android:id="@+id/textView_labor_autorizacion_hora_inicio_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:00:00"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/margin_min"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_labor_autorizacion_hora_fin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora Fin:"
                android:textColor="@color/colorBlack"
                android:fontFamily="sans-serif-medium"
                />

            <TextView
                android:id="@+id/textView_labor_autorizacion_hora_fin_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21:00:00"
                android:textColor="@color/colorPrimary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/margin_min"
                />
        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/textView_labor_autorizacion_asunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asunto:"
        android:textColor="@color/colorBlack"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="@dimen/default_margin"
        />
    <TextView
        android:id="@+id/textView_labor_autorizacion_asunto_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Asunto]"
        android:textColor="@color/colorPrimary"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="@dimen/margin_min"
        />
</LinearLayout>