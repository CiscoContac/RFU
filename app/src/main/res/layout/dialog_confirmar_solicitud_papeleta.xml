<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/dialog_bg"

    >
    <TextView
        android:id="@+id/dialog_papeleta_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONFIRMACIÓN APROBACIÓN"
        android:padding="10dp"
        android:background="@color/colorWhite"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="sans-serif-black"
        />

    <TextView
        android:id="@+id/dialog_papeleta_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_papeleta_title"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:text="¿Estás seguro de que quieres aprobar esta papeleta?"
        style="@style/textview_subtitulos_black_extralarge"/>


    <Button
        android:id="@+id/button_dialog_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRMAR"
        android:paddingStart="@dimen/default_margin"
        android:paddingEnd="@dimen/default_margin"
        android:layout_alignParentRight="true"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_below="@id/dialog_papeleta_description"
        android:textColor="@color/colorPrimary"
        />
    <Button
        android:id="@+id/button_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCELAR"
        android:layout_toLeftOf="@id/button_dialog_confirm"
        android:paddingStart="@dimen/default_margin"
        android:paddingEnd="@dimen/default_margin"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_marginRight="3dp"
        android:layout_alignBaseline="@id/button_dialog_confirm"
        android:textColor="@color/colorPrimary"
        />

</RelativeLayout>