<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="pe.gob.sunat.base.android.ui.main.SplashActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/fullscreen_content"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/logo_opcion1"
                android:layout_gravity="center"
                android:keepScreenOn="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intendencia Nacional de Recursos Humanos"
                android:textSize="24sp"
                android:layout_marginStart="@dimen/margin_max"
                android:layout_marginEnd="@dimen/margin_max"
                android:layout_marginTop="@dimen/default_margin"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:fontFamily="@font/helvetica_bold"
                android:lineSpacingExtra="@dimen/margin_min"
                android:hyphenationFrequency="none"
                />

            <TextView
                android:id="@+id/textView_frase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pronto los procesos de la Intendencia de Recursos Humanos estarÃ¡n a un clic de distancia"
                android:textSize="18sp"
                android:layout_marginStart="@dimen/margin_max"
                android:layout_marginEnd="@dimen/margin_max"
                android:layout_marginTop="@dimen/default_margin"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:lineSpacingExtra="@dimen/margin_min"
                android:hyphenationFrequency="none"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/shape_splash_bottom"
            android:layout_gravity="bottom"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trabajando para ti"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="@dimen/margin_max"
            android:textColor="@color/colorWhite"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="5dp"
            android:hyphenationFrequency="none"

            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</FrameLayout>